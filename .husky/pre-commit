echo "ğŸ” Checking pre-commit requirements..."

echo "ğŸ§¹ Running lint-staged checks..."
# Run lint-staged and store exit code
yarn lint-staged
LINT_RESULT=$?

# Prettier Check
echo "ğŸ§¹ Running prettier checks..."
yarn prettier:check
PRETTIER_RESULT=$?

# Run tests
echo "ğŸ§ª Running tests..."
yarn test:changed
TEST_RESULT=$?

# Exit with error if either check failed
if [ $LINT_RESULT -ne 0 ] || [ $TEST_RESULT -ne 0 ] || [ $PRETTIER_RESULT -ne 0 ]; then
  echo "âŒ Pre-commit checks failed"
  exit 1
fi

echo "âœ… Pre-commit checks passed"